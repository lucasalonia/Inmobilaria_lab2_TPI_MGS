@model Inmobilaria_lab2_TPI_MGS.Models.Usuario
@{
    ViewData["Title"] = "Deshabilitar Usuario";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-danger">
                        <i class="fas fa-user-slash me-2"></i>Deshabilitar Usuario
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>¡Atención!</strong> Esta acción cambiará el estado del usuario a "Inactivo". 
                        El usuario no podrá acceder al sistema hasta que sea reactivado.
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-user me-2"></i>Información del Usuario a Deshabilitar
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID de Usuario:</label>
                                <p class="form-control-plaintext">@Model.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre de Usuario:</label>
                                <p class="form-control-plaintext">@Model.UserName</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre Completo:</label>
                                <p class="form-control-plaintext">@Model.Persona.Nombre @Model.Persona.Apellido</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">DNI:</label>
                                <p class="form-control-plaintext">@Model.Persona.Dni</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">@Model.Persona.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Estado Actual:</label>
                                <span class="badge bg-success">@Model.Estado</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Fecha de Creación:</label>
                                <p class="form-control-plaintext">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Último Login:</label>
                                <p class="form-control-plaintext">@(Model.UltimoLogin?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>¿Está seguro que desea deshabilitar este usuario?</strong><br>
                        Esta acción puede ser revertida posteriormente cambiando el estado a "Activo" desde la edición del usuario.
                    </div>

                    <form asp-action="Disable" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirmarDeshabilitacion()">
                                <i class="fas fa-user-slash me-1"></i>Confirmar Deshabilitación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarDeshabilitacion() {
            return confirm('¿Está completamente seguro de que desea deshabilitar este usuario?\\n\\nEsta acción cambiará el estado del usuario a "Inactivo" y no podrá acceder al sistema.');
        }
    </script>
}
