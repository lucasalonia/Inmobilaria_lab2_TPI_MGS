@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error:</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Lista de Usuarios
                    </h3>
                    <a class="btn btn-primary" asp-action="Create" title="Crear Nuevo Usuario">
                        <i class="fas fa-plus me-1"></i>Crear Usuario
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Usuario</th>
                                    <th>Persona</th>
                                    <th>Estado</th>
                                    <th>Fecha Creación</th>
                                    <th>Último Login</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var usuario in Model)
                                    {
                                        <tr>
                                            <td>@usuario.Id</td>
                                            <td>
                                                <strong>@usuario.UserName</strong>
                                            </td>
                                            <td>
                                                @if (usuario.Persona != null)
                                                {
                                                    <span>@usuario.Persona.Nombre @usuario.Persona.Apellido</span>
                                                    <br />
                                                    <small class="text-muted">@usuario.Persona.Email</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin persona asociada</span>
                                                }
                                            </td>
                                            <td>
                                                @if (usuario.Estado == "ACTIVO")
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else if (usuario.Estado == "INACTIVO")
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@usuario.Estado</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@usuario.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (usuario.UltimoLogin.HasValue)
                                                {
                                                    <small>@usuario.UltimoLogin.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Nunca</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-primary" 
                                                       asp-action="View" 
                                                       asp-route-id="@usuario.Id" 
                                                       title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-warning" 
                                                       asp-action="Edit" 
                                                       asp-route-id="@usuario.Id" 
                                                       title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-danger btn-eliminar" 
                                                            data-id="@usuario.Id" 
                                                            data-username="@usuario.UserName"
                                                            data-persona="@(usuario.Persona?.Nombre + " " + usuario.Persona?.Apellido)"
                                                            title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle me-2"></i>
                                            No hay usuarios registrados en el sistema
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eliminarModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="mensajeEliminar"></p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    Esta acción no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancelar
                </button>
                <form id="formEliminar" method="post" asp-action="Delete" style="display: inline;">
                    <input type="hidden" id="usuarioIdEliminar" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const botonesEliminar = document.querySelectorAll('.btn-eliminar');
            
            botonesEliminar.forEach(boton => {
                boton.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const id = this.dataset.id;
                    const username = this.dataset.username;
                    const persona = this.dataset.persona || 'Sin persona asociada';
                    
                    document.getElementById('usuarioIdEliminar').value = id;
                    document.getElementById('mensajeEliminar').innerHTML = 
                        `¿Estás seguro que deseas eliminar el usuario <strong>${username}</strong>?<br><br>
                         <strong>Persona:</strong> ${persona}`;
                    
                    const modal = new bootstrap.Modal(document.getElementById('eliminarModal'));
                    modal.show();
                });
            });
        });

        document.getElementById('formEliminar').addEventListener('submit', function(e) {
            if (!confirm('¿Estás completamente seguro de que deseas eliminar este usuario?')) {
                e.preventDefault();
            }
        });
    </script>
}
