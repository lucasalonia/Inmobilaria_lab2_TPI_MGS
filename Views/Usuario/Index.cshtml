@model Inmobilaria_lab2_TPI_MGS.Models.ViewModels.PaginatedListViewModel<Inmobilaria_lab2_TPI_MGS.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error:</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Éxito:</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h3 class="card-title mb-0 fw-bold text-primary">
                        <i class="fas fa-user-shield me-2"></i>Lista de Usuarios
                    </h3>
                    <a class="btn btn-primary" asp-action="Create" title="Crear Nuevo Usuario">
                        <i class="fas fa-plus me-1"></i>Crear Usuario
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12">
                            <p class="text-muted mb-0">
                                <i class="fas fa-info-circle me-1"></i>
                                Mostrando <strong>@((Model.PageIndex - 1) * 10 + 1)</strong> a 
                                <strong>@Math.Min(Model.PageIndex * 10, Model.TotalCount)</strong> de 
                                <strong>@Model.TotalCount</strong> usuarios
                            </p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-modern">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                    <th><i class="fas fa-user me-1"></i>Usuario</th>
                                    <th><i class="fas fa-id-card me-1"></i>Persona</th>
                                    <th><i class="fas fa-user-tag me-1"></i>Rol</th>
                                    <th><i class="fas fa-toggle-on me-1"></i>Estado</th>
                                    <th><i class="fas fa-calendar-plus me-1"></i>F. Creación</th>
                                    <th><i class="fas fa-sign-in-alt me-1"></i>Último Login</th>
                                    <th class="text-center"><i class="fas fa-cogs me-1"></i>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    @foreach (var usuario in Model.Items)
                                    {
                                        <tr>
                                            <td><span class="badge bg-info">@usuario.Id</span></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-2">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <strong>@usuario.UserName</strong>
                                                </div>
                                            </td>
                                            <td>
                                                @if (usuario.Persona != null)
                                                {
                                                    <span class="fw-semibold">@usuario.Persona.Nombre @usuario.Persona.Apellido</span>
                                                    <br />
                                                    <small class="text-muted"><i class="fas fa-envelope me-1"></i>@usuario.Persona.Email</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin persona asociada</span>
                                                }
                                            </td>
                                            <td>
                                                @if (usuario.RolActual != null)
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-user-tag me-1"></i>@usuario.RolActual.Nombre
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-pending">Sin rol</span>
                                                }
                                            </td>
                                            <td>
                                                @if (usuario.Estado == "ACTIVO")
                                                {
                                                    <span class="status-badge status-active">
                                                        <i class="fas fa-check-circle me-1"></i>ACTIVO
                                                    </span>
                                                }
                                                else if (usuario.Estado == "INACTIVO")
                                                {
                                                    <span class="status-badge status-inactive">
                                                        <i class="fas fa-times-circle me-1"></i>INACTIVO
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-badge status-pending">@usuario.Estado</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted"><i class="fas fa-calendar me-1"></i>@usuario.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (usuario.UltimoLogin.HasValue)
                                                {
                                                    <small class="text-muted"><i class="fas fa-clock me-1"></i>@usuario.UltimoLogin.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted"><i class="fas fa-minus-circle me-1"></i>Nunca</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="table-actions">
                                                    <a class="btn btn-sm btn-outline-primary" 
                                                       asp-action="Details" 
                                                       asp-route-id="@usuario.Id" 
                                                       title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-warning" 
                                                       asp-action="Edit" 
                                                       asp-route-id="@usuario.Id" 
                                                       title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (usuario.Estado == "ACTIVO")
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" 
                                                           asp-action="Disable" 
                                                           asp-route-id="@usuario.Id" 
                                                           title="Deshabilitar">
                                                            <i class="fas fa-user-slash"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="btn btn-sm btn-outline-secondary disabled" title="Usuario ya deshabilitado">
                                                            <i class="fas fa-user-slash"></i>
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle me-2"></i>
                                            No hay usuarios registrados en el sistema
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Navegación de páginas">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)">
                                        <i class="fas fa-angle-left"></i> Anterior
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pageIndex="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)">
                                        Siguiente <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

