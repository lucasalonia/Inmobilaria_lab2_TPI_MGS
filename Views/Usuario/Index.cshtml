@model Inmobilaria_lab2_TPI_MGS.Models.ViewModels.PaginatedListViewModel<Inmobilaria_lab2_TPI_MGS.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Error:</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            <strong>Éxito:</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Lista de Usuarios
                    </h3>
                    <a class="btn btn-primary" asp-action="Create" title="Crear Nuevo Usuario">
                        <i class="fas fa-plus me-1"></i>Crear Usuario
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12">
                            <p class="text-muted mb-0">
                                Mostrando @((Model.PageIndex - 1) * 10 + 1) a 
                                @Math.Min(Model.PageIndex * 10, Model.TotalCount) de 
                                @Model.TotalCount usuarios
                            </p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Usuario</th>
                                    <th>Persona</th>
                                    <th>Rol</th>
                                    <th>Estado</th>
                                    <th>Fecha Creación</th>
                                    <th>Último Login</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    @foreach (var usuario in Model.Items)
                                    {
                                        <tr>
                                            <td>@usuario.Id</td>
                                            <td>
                                                <strong>@usuario.UserName</strong>
                                            </td>
                                            <td>
                                                @if (usuario.Persona != null)
                                                {
                                                    <span>@usuario.Persona.Nombre @usuario.Persona.Apellido</span>
                                                    <br />
                                                    <small class="text-muted">@usuario.Persona.Email</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin persona asociada</span>
                                                }
                                            </td>
                                            <td>
                                                @if (usuario.RolActual != null)
                                                {
                                                    <span class="badge bg-primary">@usuario.RolActual.Nombre</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin rol</span>
                                                }
                                            </td>
                                            <td>
                                                @if (usuario.Estado == "ACTIVO")
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else if (usuario.Estado == "INACTIVO")
                                                {
                                                    <span class="badge bg-danger">Inactivo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@usuario.Estado</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@usuario.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (usuario.UltimoLogin.HasValue)
                                                {
                                                    <small>@usuario.UltimoLogin.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Nunca</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-primary" 
                                                       asp-action="Details" 
                                                       asp-route-id="@usuario.Id" 
                                                       title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-warning" 
                                                       asp-action="Edit" 
                                                       asp-route-id="@usuario.Id" 
                                                       title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (usuario.Estado == "ACTIVO")
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" 
                                                           asp-action="Disable" 
                                                           asp-route-id="@usuario.Id" 
                                                           title="Deshabilitar">
                                                            <i class="fas fa-user-slash"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="btn btn-sm btn-outline-secondary disabled" title="Usuario ya deshabilitado">
                                                            <i class="fas fa-user-slash"></i>
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle me-2"></i>
                                            No hay usuarios registrados en el sistema
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Navegación de páginas">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)">
                                        <i class="fas fa-angle-left"></i> Anterior
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-pageIndex="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)">
                                        Siguiente <i class="fas fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

