@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inmobilaria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inmobilaria_lab2_TPI_MGS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark modern-navbar shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-building me-2"></i>
                    <span class="fw-bold">Inmobiliaria</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Propietarios" asp-action="Index">
                                    <i class="fas fa-user-tie me-1"></i> Propietarios
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="inmuebleDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-home me-1"></i> Inmuebles
                                </a>
                                <ul class="dropdown-menu modern-dropdown" aria-labelledby="inmuebleDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Inmueble" asp-action="Index">
                                            <i class="fas fa-list me-2"></i> Administrar inmuebles
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="TipoInmueble" asp-action="Index">
                                            <i class="fas fa-tags me-2"></i> Tipos de inmueble
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Inquilinos" asp-action="Index">
                                    <i class="fas fa-users me-1"></i> Inquilinos
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="contratosDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-file-contract me-1"></i> Contratos
                                </a>
                                <ul class="dropdown-menu modern-dropdown" aria-labelledby="contratosDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Contratos" asp-action="Index">
                                            <i class="fas fa-plus-circle me-2"></i> Crear nuevo contrato
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Contratos" asp-action="Lista">
                                            <i class="fas fa-list-ul me-2"></i> Ver todos los contratos
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Pagos" asp-action="Index">
                                    <i class="fas fa-dollar-sign me-1"></i> Pagos
                                </a>
                            </li>
                            @if (User.IsInRole("ADMINISTRADOR"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">
                                        <i class="fas fa-user-shield me-1"></i> Usuarios
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Usuario dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center user-dropdown" href="#" id="userDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <img id="navbarAvatar" src="@(string.IsNullOrWhiteSpace(User.FindFirst("FotoPerfil")?.Value) ? "/img/avatar-default.svg" : User.FindFirst("FotoPerfil")!.Value)"
                                         alt="Avatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover; border: 2px solid #fff;" />
                                    <span class="d-none d-lg-inline">@User.FindFirst("FullName")?.Value</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end modern-dropdown" aria-labelledby="userDropdown">
                                    <li>
                                        <div class="dropdown-item-text">
                                            <div class="d-flex align-items-center mb-2">
                                                <img src="@(string.IsNullOrWhiteSpace(User.FindFirst("FotoPerfil")?.Value) ? "/img/avatar-default.svg" : User.FindFirst("FotoPerfil")!.Value)"
                                                     alt="Avatar" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                                <div>
                                                    <div class="fw-bold">@User.FindFirst("FullName")?.Value</div>
                                                    <small class="text-muted">@User.FindFirst(ClaimTypes.Email)?.Value</small>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#profileModal">
                                            <i class="fas fa-user-cog me-2"></i> Mi perfil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-area="" asp-controller="Auth" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-light px-3" asp-area="" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="profileModalLabel">Modificar perfil</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form asp-controller="Perfil" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            @Html.AntiForgeryToken()
                            <div class="mb-3 text-center">
                                <img src="@(string.IsNullOrWhiteSpace(User.FindFirst("FotoPerfil")?.Value) ? "/img/avatar-default.svg" : User.FindFirst("FotoPerfil")!.Value)" alt="Avatar" class="rounded-circle" style="width: 96px; height: 96px; object-fit: cover;" />
                            </div>
                            <div class="mb-3">
                                <label for="Username" class="form-label">Nombre de usuario</label>
                                <input name="Username" id="Username" class="form-control" value="@User.Identity?.Name" required />
                            </div>
                            <div class="mb-3">
                                <label for="FotoPerfil" class="form-label">Foto de perfil</label>
                                <input type="file" name="FotoPerfil" id="FotoPerfil" class="form-control" accept="image/*" />
                                <small class="text-muted">JPG/PNG/WebP, hasta 2MB</small>
                            </div>
                            <div class="mb-3">
                                <label for="CurrentPassword" class="form-label">Contraseña actual</label>
                                <input type="password" name="CurrentPassword" id="CurrentPassword" class="form-control" required minlength="6" />
                            </div>
                            <div class="mb-3">
                                <label for="NewPassword" class="form-label">Nueva contraseña</label>
                                <input type="password" name="NewPassword" id="NewPassword" class="form-control" placeholder="Opcional" minlength="6" />
                            </div>
                            <div class="mb-3">
                                <label for="ConfirmPassword" class="form-label">Confirmar contraseña</label>
                                <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" placeholder="Opcional" minlength="6" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="modern-footer">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <h5 class="fw-bold mb-2">
                        <i class="fas fa-building me-2"></i>Inmobiliaria
                    </h5>
                    <p class="text-muted small mb-0">
                        Sistema de gestión inmobiliaria profesional
                    </p>
                    <p class="text-muted small">
                        &copy; 2025 Todos los derechos reservados
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="mb-2">
                        <a href="#" class="text-decoration-none me-3">
                            <i class="fas fa-question-circle me-1"></i> Ayuda
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none me-3">
                            <i class="fas fa-shield-alt me-1"></i> Privacidad
                        </a>
                        <a href="#" class="text-decoration-none">
                            <i class="fas fa-envelope me-1"></i> Contacto
                        </a>
                    </div>
                    <div class="social-links">
                        <a href="#" class="social-link" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="social-link" title="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-link" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="social-link" title="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script src="~/js/modificarPerfil.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>