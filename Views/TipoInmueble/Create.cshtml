@model Inmobilaria_lab2_TPI_MGS.Models.TipoInmueble
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-plus me-2"></i>Crear Nuevo Tipo de Inmueble
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="TipoInmueble" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Nombre">Nombre *</label>
                                    <input type="text" asp-for="Nombre" class="form-control" id="Nombre" name="Nombre" value="@Model?.Nombre" />
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Descripcion">Descripci√≥n</label>
                                    <textarea class="form-control" asp-for="Descripcion" id="Descripcion" name="Descripcion">@Model?.Descripcion</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4"></div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Crear Tipo de Inmueble                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>