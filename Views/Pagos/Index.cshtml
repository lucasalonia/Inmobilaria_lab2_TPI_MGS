@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.ViewModels.ContratosViewModel>

@{
    ViewData["Title"] = "Contratos";
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
    var TotalRegistros = ViewBag.TotalRegistros ?? 0;
    int tamPagina = 10;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <h3 class="card-title mb-0 fw-bold text-primary">
                    <i class="fas fa-dollar-sign me-2"></i>Contratos Vigentes - Selecci칩n de Pagos
                </h3>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12">
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            Mostrando <strong>@((Pagina - 1) * tamPagina + 1)</strong> a
                            <strong>@Math.Min(Pagina * tamPagina, TotalRegistros)</strong> de
                            <strong>@TotalRegistros</strong> contratos
                        </p>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-modern">
                        <thead>
                            <tr>
                                <th><i class="fas fa-id-card me-1"></i>DNI</th>
                                <th><i class="fas fa-user me-1"></i>Inquilino</th>
                                <th><i class="fas fa-hashtag me-1"></i>ID Contrato</th>
                                <th><i class="fas fa-calendar-check me-1"></i>F. Inicio</th>
                                <th><i class="fas fa-calendar-times me-1"></i>F. Fin</th>
                                <th><i class="fas fa-toggle-on me-1"></i>Estado</th>
                                <th><i class="fas fa-coins me-1"></i>Moneda</th>
                                <th><i class="fas fa-money-bill me-1"></i>Monto Mensual</th>
                                <th><i class="fas fa-piggy-bank me-1"></i>Dep칩sito</th>
                                <th class="text-center"><i class="fas fa-comment me-1"></i>Obs.</th>
                                <th class="text-center"><i class="fas fa-receipt me-1"></i>Pagos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><span class="badge bg-secondary">@item.Inquilino.Persona.Dni</span></td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle me-2">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                                <span class="fw-semibold">@item.Inquilino.Persona.Apellido @item.Inquilino.Persona.Nombre</span>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-info">@item.Contrato.Id</span></td>
                                        <td><small class="text-muted">@item.Contrato.FechaInicio.ToShortDateString()</small></td>
                                        <td><small class="text-muted">@item.Contrato.FechaFin.ToShortDateString()</small></td>
                                        <td class="text-center">
                                            @if (string.IsNullOrEmpty(item.Contrato.Estado))
                                            {
                                                <span class="status-badge status-pending">SIN ESTADO</span>
                                            }
                                            else if (item.Contrato.Estado == "VIGENTE")
                                            {
                                                <span class="status-badge status-active">
                                                    <i class="fas fa-check-circle me-1"></i>VIGENTE
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge status-inactive">
                                                    <i class="fas fa-times-circle me-1"></i>@item.Contrato.Estado
                                                </span>
                                            }
                                        </td>
                                        <td><span class="badge bg-success">@item.Contrato.Moneda</span></td>
                                        <td><strong class="text-success">$@(item.Contrato.MontoMensual?.ToString("N2") ?? "0.00")</strong></td>
                                        <td><span class="text-muted">$@(item.Contrato.Deposito?.ToString("N2") ?? "0.00")</span></td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(item.Contrato.Observaciones))
                                            {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary btn-observaciones"
                                                        data-id="@item.Contrato.Id"
                                                        data-observaciones="@item.Contrato.Observaciones">
                                                        ...
                                                    </button>

                                                    }
                                            else
                                            {
                                                <span class="text-muted">Sin observaciones</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">

                                                <a asp-controller="Pagos" asp-action="Lista" asp-route-id="@item.Contrato.Id"
                                                    class="btn btn-primary btn-sm" title="Registrar Pago">
                                                    <i class="fas fa-file-contract"></i> Lista de Pagos
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No hay contratos registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegaci칩n de p치ginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Index?pagina=@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>
                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a class="page-link" href="~/Contratos/Index?pagina=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Index?pagina=@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="observacionesModal" tabindex="-1" aria-labelledby="observacionesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="observacionesLabel">Observaciones del Contrato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="contenidoObservaciones"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div

@section Scripts {
    <script>
          document.querySelectorAll('.btn-observaciones').forEach(btn => {
            btn.addEventListener('click', function() {
                const id = this.dataset.id;
                const texto = this.dataset.observaciones;

                document.getElementById('contenidoObservaciones').textContent = texto;
                document.getElementById('observacionesLabel').textContent = `Observaciones del Contrato #${id}`;

                new bootstrap.Modal(document.getElementById('observacionesModal')).show();
            });
        });
        </script>
        }