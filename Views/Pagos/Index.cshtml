@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.ViewModels.ContratosViewModel>

@{
    ViewData["Title"] = "Contratos";
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
    var TotalRegistros = ViewBag.TotalRegistros ?? 0;
    int tamPagina = 10;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-file-contract me-2"></i>Contratos Vigentes - Seleccion de Pagos
                </h3>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-14">
                        <p class="text-muted mb-0">
                            Mostrando @((Pagina - 1) * tamPagina + 1) a
                            @Math.Min(Pagina * tamPagina, TotalRegistros) de
                            @TotalRegistros contratos
                        </p>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>DNI</th>
                                <th>Inquilino</th>
                                <th>ID Contrato</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Estado</th>
                                <th>Moneda</th>
                                <th>Monto Mensual</th>
                                <th>Depósito</th>
                                <th>Observaciones</th>
                                <th>Pagos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Inquilino.Persona.Dni</td>
                                        <td>@item.Inquilino.Persona.Apellido @item.Inquilino.Persona.Nombre </td>
                                        <td>@item.Contrato.Id</td>
                                        <td>@item.Contrato.FechaInicio.ToShortDateString()</td>
                                        <td>@item.Contrato.FechaFin.ToShortDateString()</td>
                                        <td class="text-center">
                                            @if (string.IsNullOrEmpty(item.Contrato.Estado))
                                            {
                                                <span class="badge bg-secondary">SIN ESTADO</span>
                                            }
                                            else if (item.Contrato.Estado == "VIGENTE")
                                            {
                                                <span class="badge bg-success">VIGENTE</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@item.Contrato.Estado</span>
                                            }
                                        </td>
                                        <td>@item.Contrato.Moneda</td>
                                        <td>@item.Contrato.MontoMensual</td>
                                        <td>@item.Contrato.Deposito</td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(item.Contrato.Observaciones))
                                            {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary btn-observaciones"
                                                        data-id="@item.Contrato.Id"
                                                        data-observaciones="@item.Contrato.Observaciones">
                                                        ...
                                                    </button>

                                                    }
                                            else
                                            {
                                                <span class="text-muted">Sin observaciones</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">

                                                <a asp-controller="Pagos" asp-action="Lista" asp-route-id="@item.Contrato.Id"
                                                    class="btn btn-primary btn-sm" title="Registrar Pago">
                                                    <i class="fas fa-file-contract"></i> Lista de Pagos
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No hay contratos registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Index?pagina=@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>
                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a class="page-link" href="~/Contratos/Index?pagina=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Index?pagina=@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="observacionesModal" tabindex="-1" aria-labelledby="observacionesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="observacionesLabel">Observaciones del Contrato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="contenidoObservaciones"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div

@section Scripts {
    <script>
          document.querySelectorAll('.btn-observaciones').forEach(btn => {
            btn.addEventListener('click', function() {
                const id = this.dataset.id;
                const texto = this.dataset.observaciones;

                document.getElementById('contenidoObservaciones').textContent = texto;
                document.getElementById('observacionesLabel').textContent = `Observaciones del Contrato #${id}`;

                new bootstrap.Modal(document.getElementById('observacionesModal')).show();
            });
        });
        </script>
        }