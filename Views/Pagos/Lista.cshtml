@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.Pago>

@{
    ViewData["Title"] = "Contratos";
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
    var TotalRegistros = ViewBag.TotalRegistros ?? 0;
    int tamPagina = 10;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <h3 class="card-title mb-0 fw-bold text-primary">
                    <i class="fas fa-file-contract me-2"></i>Lista de Pagos para el Contrato @ViewBag.IdContrato 
                </h3>
            </div>
            
            <div class="card-body">
            <div class="row mb-3">
					<div class="col-14">
						<p class="text-muted mb-0">
							Mostrando @((Pagina - 1) * tamPagina + 1) a
							@Math.Min(Pagina * tamPagina, TotalRegistros) de
							@TotalRegistros contratos
						</p>
					</div>
				</div>
                <div class="table-responsive">
                    <table class="table table-modern">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Año</th>
                                <th>Mes</th>
                                <th>Vencimiento</th>
                                <th>Estado</th>
                                <th>Importe mensual</th>
                                <th>Moneda</th>
                                <th>Importe abonado</th>
                                <th>Medio de pago</th>
                                <th>Fecha de pago</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    var filaClass = "";

                                    if (item.Estado == "PENDIENTE" && item.FechaVencimiento >= DateTime.Today)
                                    {
                                        filaClass = "table-warning"; 
                                    }
                                    else if (item.Estado == "VENCIDO" && item.FechaVencimiento < DateTime.Today && item.ImportePagado == null)
                                    {
                                        filaClass = "table-danger"; 
                                    }
                                    else if (item.Estado == "PAGADO" && item.ImportePagado >= item.Importe)
                                    {
                                        filaClass = "table-success"; 
                                    }
                                    else
                                    {
                                        filaClass = "table-secondary"; 
                                    }
                                    <tr class="@filaClass">
                                        <td>@item.Id</td>
                                        <td>@item.PeriodoAnio</td>
                                        <td>@item.PeriodoMes</td>
                                        <td>@item.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                                        <td class="text-center">
                                            @if (item.Estado == "PENDIENTE" && item.FechaVencimiento >= DateTime.Today)
                                            {
                                                <span class="badge bg-warning">@item.Estado</span>
                                            }
                                            else if (item.Estado == "VENCIDO" && item.FechaVencimiento < DateTime.Today && item.ImportePagado == null)
                                            {
                                                <span class="badge bg-danger">@item.Estado</span>
                                            }
                                            else if(item.Estado == "PAGADO" && item.ImportePagado >= item.Importe)
                                            {
                                                <span class="badge bg-success">@item.Estado</span>
                                            }else
                                            {
                                                <span class="badge bg-secondary">ERROR</span>
                                            }
                                        </td>
                                        <td>@item.Importe</td>
                                        <td>@ViewBag.Moneda</td>
                                        <td>@(item.ImportePagado != null ? item.ImportePagado : "No registra")</td>
                                        <td>@(item.MedioPago != null ? item.MedioPago : "No registra")</td>
                                        <td>@(item.FechaPago != null ? item.FechaPago : "No registra")</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                @if(item.Estado == "PAGADO" && item.ImportePagado >= item.Importe)
                                                {
                                                    <span class="text-success fw-bold">COMPLETO</span>
                                                }
                                                else
                                                {
                                                    <a asp-controller="Pagos" asp-action="Modificar" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Registrar Pago">
                                                    <i class="fas fa-dollar-sign"></i> ABONAR
                                                </a>
                                                }
                                                

                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No hay pagos registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Index?pagina=@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>
                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a class="page-link" href="~/Contratos/Index?pagina=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Index?pagina=@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
