@model Inmobilaria_lab2_TPI_MGS.Models.Propietario
@{
    ViewData["Title"] = "Detalles del Propietario";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Detalles del Propietario
                    </h3>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-id-card me-2"></i>Información Personal
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">DNI:</label>
                                <p class="form-control-plaintext">@Model.Persona.Dni</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Sexo:</label>
                                <p class="form-control-plaintext">@(Model.Persona.Sexo == "M" ? "Masculino" : "Femenino")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre:</label>
                                <p class="form-control-plaintext">@Model.Persona.Nombre</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Apellido:</label>
                                <p class="form-control-plaintext">@Model.Persona.Apellido</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">@Model.Persona.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Teléfono:</label>
                                <p class="form-control-plaintext">@(Model.Persona.Telefono ?? "No especificado")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Fecha de Nacimiento:</label>
                                <p class="form-control-plaintext">@(Model.Persona.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "No especificada")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-success mb-3">
                                <i class="fas fa-user-shield me-2"></i>Información de Propietario
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID del Propietario:</label>
                                <p class="form-control-plaintext">@Model.Id</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Estado:</label>
                                @if (Model.Estado == "ACTIVO")
                                {
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-success">Activo</span>
                                    </p>
                                }
                                else if (Model.Estado == "INACTIVO")
                                {
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-danger">Inactivo</span>
                                    </p>
                                }
                                else
                                {
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-warning">@Model.Estado</span>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Información de Auditoría -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-info mb-3">
                                <i class="fas fa-history me-2"></i>Información de Auditoría
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Fecha de Creación:</label>
                                <p class="form-control-plaintext">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Última Modificación:</label>
                                <p class="form-control-plaintext">@Model.FechaModificacion.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Creado por:</label>
                                <p class="form-control-plaintext">@Model.CreadoPorNombre</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Modificado por:</label>
                                <p class="form-control-plaintext">@Model.ModificadoPorNombre</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
