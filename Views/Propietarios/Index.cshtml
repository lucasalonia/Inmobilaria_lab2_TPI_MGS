@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.Propietario>

@{
	ViewData["Title"] = "Propietarios";
	var Pagina = ViewBag.Pagina ?? 1;
	var TotalPaginas = ViewBag.TotalPaginas ?? 1;
    var TotalRegistros = ViewBag.TotalRegistros ?? 0;
    int tamPagina = 10;
}



@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users me-2"></i>Lista de Propietarios
                    </h3>
                    <a class="btn btn-primary" asp-action="Create" title="Nuevo Propietario" data-bs-toggle="tooltip">
                        <i class="fas fa-plus me-1"></i>Crear Propietario
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12">
                            <p class="text-muted mb-0">
                                Mostrando @((Pagina - 1) * tamPagina + 1) a 
                                @Math.Min(Pagina * tamPagina, TotalRegistros) de 
                                @TotalRegistros propietarios
                            </p>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nombre completo</th>
                                    <th>DNI</th>
                                    <th>Telefono</th>
                                    <th>Fecha Nacimiento</th>
                                    <th>Estado</th>
                                    <th>Fecha Creacion</th>
                               <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span>@item.Persona.Nombre @item.Persona.Apellido</span>
                                            <br/>
                                            <small class="text-muted">@item.Persona.Email</small>
                                        </td>
                                        <td><spam>@item.Persona.Dni</spam></td>
                                        <td>@(item.Persona.Telefono ?? "-")</td>
                                        <td>@(item.Persona.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>
                                            @if (item.Estado == "ACTIVO")
                                            {
                                                <span class="badge bg-success">ACTIVO</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">INACTIVO</span>
                                            }
                                        <td><small>@item.FechaCreacion.ToString("dd/MM/yyyy")</small></td>
                                        <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-primary" 
                                                       asp-action="Details" 
                                                       asp-route-id="@item.Id" 
                                                       title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-warning" 
                                                       asp-action="Edit" 
                                                       asp-route-id="@item.Id" 
                                                       title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (item.Estado == "ACTIVO")
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" 
                                                           asp-action="Delete" 
                                                           asp-route-id="@item.Id" 
                                                           title="Deshabilitar">
                                                            <i class="fas fa-user-slash"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="btn btn-sm btn-outline-secondary disabled" title="Propietario ya deshabilitado">
                                                            <i class="fas fa-user-slash"></i>
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                   @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link" href="~/Propietarios/Index?pagina=@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>

                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a class="page-link" href="~/Propietarios/Index?pagina=@i">@i</a>
                                </li>
                            }

                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link" href="~/Propietarios/Index?pagina=@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>