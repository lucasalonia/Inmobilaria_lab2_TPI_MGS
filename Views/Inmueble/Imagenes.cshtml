@using Org.BouncyCastle.Crypto.Digests
@model Inmobilaria_lab2_TPI_MGS.Models.Inmueble

@{
    ViewData["Title"] = "Imágenes del Inmueble";
}

<div class="container mt-4">
    <h2 class="mb-4">Imágenes del Inmueble</h2>

    <div class="mb-3">
        <h5><i class="bi bi-house"></i> Inmueble: @Model.Tipo - @Model.Direccion</h5>
        <p><strong>Propietario:</strong> @(Model.PropietarioNombre ?? "Sin propietario")</p>
    </div>

    <hr />
    <div class="row">
        <div class="col-6">
            <!-- Portada -->
            <div class="mb-5">
                <h4>Portada</h4>
                @if (!string.IsNullOrEmpty(Model.Portada))
                {
                    <div class="card gallery-card" style="max-width: 100%; position: relative;">
                        <img src="@Model.Portada" alt="Portada del inmueble" class="img-fluid rounded shadow" />
                        <!-- Botón eliminar -->
                        <div class="overlay-btn">
                            <form asp-action="EliminarPortada" asp-controller="Inmueble" method="post"
                                onsubmit="return confirm('¿Eliminar protada?');">
                                <input type="hidden" name="id" value="@Model.Portada" />
                                <input type="hidden" name="inmuebleId" value="@Model.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted">No hay portada cargada</p>
                }

                <form asp-action="Portada" asp-controller="Inmueble" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="inmuebleId" value="@Model.Id"/>
                    <div class="input-group mt-4">
                        <input type="file" name="portadaFile" class="form-control" accept="image/*" />
                        <button type="submit" class="btn btn-primary">Actualizar Portada</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-6">
            <div>
                <h4>Galería de imágenes</h4>
                <style>
                /* estilos globales (ponelos en el layout o arriba de la galería) */
                .gallery-card { overflow: hidden; position: relative; }
                .gallery-card .card-img-top { position: relative; z-index: 1; display: block; }
                .overlay-btn {
                    position: absolute;
                    top: .5rem;
                    right: .5rem;
                    opacity: 0;
                    transition: opacity .18s ease;
                    z-index: 3; /* por encima de la imagen/anchor */
                }
                .gallery-card:hover .overlay-btn { opacity: 1; }

                </style>

                @if (Model.Imagenes != null && Model.Imagenes.Any())
                {
                    <div class="row">
                        @foreach (var img in Model.Imagenes)
                        {
                            var modalId = $"modalImagen{img.Id}";
                            <div class="col-md-4 mb-2 px-1">
                                <div class="card gallery-card">
                                    <!-- Enlace de la imagen -->
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#@modalId" style="display:block;">
                                        <img src="@img.Url" alt="Imagen inmueble"
                                            class="card-img-top"
                                            style="height:200px; object-fit:cover; cursor:pointer;" />
                                    </a>

                                    <!-- Botón eliminar -->
                                    <div class="overlay-btn">
                                        <form asp-action="EliminarImagen" asp-controller="Inmueble" method="post"
                                            onsubmit="return confirm('¿Eliminar esta imagen?');">
                                            <input type="hidden" name="id" value="@img.Id" />
                                            <input type="hidden" name="inmuebleId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal para ver la imagen en grande -->
                            <div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-body p-2 text-center">
                                            <img src="@img.Url" alt="Imagen inmueble grande" class="img-fluid rounded" />
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No hay imágenes adicionales</p>
                }

                <form asp-action="AgregarImagen" asp-controller="Inmueble" method="post" enctype="multipart/form-data" class="mt-3">
                    <input type="hidden" name="InmuebleId" value="@Model.Id" />
                    <div class="input-group">
                        <input type="file" name="Archivo" class="form-control" accept="image/*" multiple required />
                        <button type="submit" class="btn btn-success">Agregar Imágenes</button>
                    </div>
                </form>
        </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a Inmuebles
        </a>
    </div>
</div>

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>