@model Inmobilaria_lab2_TPI_MGS.Models.Inmueble
@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-buildings-fill me-2"></i>Detalles del inmueble
                    </h3>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Id:</label>
                                <p class="form-control-plaintext">@(Model.Id)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tipo:</label>
                                <p class="form-control-plaintext">@(Model.Tipo)</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Superficie (m²):</label>
                                <p class="form-control-plaintext">@Model.SuperficieM2</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ambientes:</label>
                                <p class="form-control-plaintext">@Model.Ambientes</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Baños:</label>
                                <p class="form-control-plaintext">@Model.Banos</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Cant. de cocheras:</label>
                                <p class="form-control-plaintext">@(Model.Cochera)</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Dirección:</label>
                                <p class="form-control-plaintext">@(Model.Direccion)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Descripción:</label>
                                <p class="form-control-plaintext">@(Model.Descripcion)</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Estado:</label>
                                @if (Model.Estado == "ACTIVO")
                                {
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-success">Activo</span>
                                    </p>
                                }
                                else if (Model.Estado == "INACTIVO")
                                {
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-danger">Inactivo</span>
                                    </p>
                                }
                                else
                                {
                                    <p class="form-control-plaintext">
                                        <span class="badge bg-warning">@Model.Estado</span>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-success mb-3">
                                <i class="fas fa-user-shield me-2"></i>Información de Propietario
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">ID del Propietario:</label>
                                <p class="form-control-plaintext">@Model.PropietarioId</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre del Propietario:</label>
                                <p class="form-control-plaintext">@Model.PropietarioNombre</p>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Auditoría -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-info mb-3">
                                <i class="fas fa-history me-2"></i>Información de Auditoría
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Creado por:</label>
                                <p class="form-control-plaintext">@(Model.CreadoPor?.ToString() ?? "Sistema")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Modificado por:</label>
                                <p class="form-control-plaintext">@(Model.ModificadoPor?.ToString() ?? "Sistema")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
