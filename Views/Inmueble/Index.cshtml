@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.Inmueble>
@await Html.PartialAsync("_ModalSeleccionPropietario")

@{
	ViewData["Title"] = "Inmuebles";
	var Pagina = ViewBag.Pagina ?? 1;
	var TotalPaginas = ViewBag.TotalPaginas ?? 1;
    var TotalRegistros = ViewBag.TotalRegistros ?? 0;
    int tamPagina = 10;
}



@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-buildings-fill me-2"></i>Lista de Inmuebles
                    </h3>
                    <a class="btn btn-primary" asp-action="Create" title="Nuevo Inmueble" data-bs-toggle="tooltip">
                        <i class="fas fa-plus me-1"></i>Crear Inmueble
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <p class="text-muted mb-0">
                                Mostrando @((Pagina - 1) * tamPagina + 1) a 
                                @Math.Min(Pagina * tamPagina, TotalRegistros) de 
                                @TotalRegistros inmuebles
                            </p>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center mb-3 gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-list"></i> Todos
                                </a>
                                <a asp-action="Disponibles" class="btn btn-outline-success me-2">
                                    <i class="fas fa-home"></i> Disponibles
                                </a>

                                <button class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#modalPropietarios">
                                    <i class="fas fa-user"></i> Buscar por Propietario
                                </button>
                            </div>

                            <!-- Campo oculto donde guardás el ID seleccionado -->
                            <input type="hidden" id="PropietarioId" />
                            
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tipo</th>
                                    <th>Superficie</th>
                                    <th>Ambientes</th>
                                    <th>Dirección</th>
                                    <th>Descripción</th>
                                    <th>Estado</th>
                                    <th>Fecha Creacion</th>
                               <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(item.TipoInmuebleNombre ?? "-")</td>
                                        <td>@(item.SuperficieM2?.ToString() ?? "-")</td>
                                        <td>@(item.Ambientes?.ToString() ?? "-")</td>
                                        <td>@item.Direccion</td>
                                        <td>@(item.Descripcion?? "-")</td>
                                        <td>
                                            @if (item.Estado == "ACTIVO")
                                            {
                                                <span class="badge bg-success">ACTIVO</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">INACTIVO</span>
                                            }
                                        </td>
                                        <td><small>@item.FechaCreacion.ToString("dd/MM/yyyy")</small></td>
                                        <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a class="btn btn-sm btn-outline-info"
                                                        asp-action="Imagenes"
                                                        asp-route-id="@item.Id"
                                                        title="Ver fotos">
                                                        <i class="fas fa-image"></i>
                                                    </a>
                                                        
                                                    <a class="btn btn-sm btn-outline-primary" 
                                                       asp-action="Details" 
                                                       asp-route-id="@item.Id" 
                                                       title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-info" 
                                                            data-bs-toggle="modal" data-bs-target="#contratosModal"
                                                            data-inmueble-id="@item.Id" title="Ver contratos">
                                                        <i class="bi bi-file-text"></i>
                                                    </button>
                                                    <a class="btn btn-sm btn-outline-warning" 
                                                       asp-action="Edit" 
                                                       asp-route-id="@item.Id" 
                                                       title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (item.Estado == "ACTIVO")
                                                    {
                                                        <a class="btn btn-sm btn-outline-danger" 
                                                            href="javascript:void(0);"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#eliminarModal"
                                                            data-id="@item.Id"
                                                            data-tipo="@(item.TipoInmuebleNombre ?? "-")"
                                                            data-ambientes="@item.Ambientes"
                                                            data-direccion="@item.Direccion"
                                                            title="Deshabilitar">
                                                                <i class="fas fa-user-slash"></i>
                                                            </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="btn btn-sm btn-outline-secondary disabled" title="Propietario ya deshabilitado">
                                                            <i class="fas fa-user-slash"></i>
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                   @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>

                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-pagina="@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal Confirmación Eliminar -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="formEliminar" method="post" asp-action="Delete">
				<div class="modal-header">
					<h5 class="modal-title" id="eliminarModalLabel">Confirmar Eliminación</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
				</div>
				<div class="modal-body">
					<p id="mensajeEliminar"></p>
					<input type="hidden" id="EliminarId" name="Id" />
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
					<button type="submit" class="btn btn-danger">Deshabilitar</button>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Modal contratos -->
<div class="modal fade" id="contratosModal" tabindex="-1" aria-labelledby="contratosModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="contratosModalContent">
            <div class="modal-header">
                <h5 class="modal-title" id="contratosModalLabel">Contratos del inmueble</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center text-muted py-5">Cargando...</div>
            </div>
        </div>
    </div>
    </div>

@section Scripts {
    <script>
        var contratosModal = document.getElementById('contratosModal');
        contratosModal.addEventListener('show.bs.modal', async function (event) {
            var button = event.relatedTarget;
            var inmuebleId = button.getAttribute('data-inmueble-id');
            var url = '@Url.Action("Contratos","Inmueble")' + '?id=' + encodeURIComponent(inmuebleId) + '&pagina=1';
            try {
                var resp = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                var html = await resp.text();
                document.getElementById('contratosModalContent').innerHTML = html;
            } catch (e) {
                document.querySelector('#contratosModal .modal-body').innerHTML = '<div class="text-danger">Error al cargar contratos</div>';
            }
        });
        window.cargarContratosPagina = async function (inmuebleId, pagina) {
            if (pagina < 1) return false;
            var url = '@Url.Action("Contratos","Inmueble")' + '?id=' + encodeURIComponent(inmuebleId) + '&pagina=' + encodeURIComponent(pagina);
            try {
                var resp = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                var html = await resp.text();
                document.getElementById('contratosModalContent').innerHTML = html;
            } catch (e) {
                // ignore
            }
            return false;
        }
        var eliminarModal = document.getElementById('eliminarModal');
        eliminarModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // botón que abrió el modal

            var id = button.getAttribute('data-id');
            var tipo = button.getAttribute('data-tipo') || "-";
            var ambientes = button.getAttribute('data-ambientes') || "-";
            var direccion = button.getAttribute('data-direccion') || "-";

            // mensaje
            var mensaje = "¿Está seguro que desea deshabilitar el inmueble?";
            mensaje += "<br><strong>Tipo:</strong> " + tipo;
            mensaje += "<br><strong>Ambientes:</strong> " + ambientes;
            mensaje += "<br><strong>Dirección:</strong> " + direccion;

            document.getElementById('mensajeEliminar').innerHTML = mensaje;
            document.getElementById('EliminarId').value = id;
        });


    function cargarPropietarios(pagina) {
        $.get('/Propietarios/ListarParaSeleccion?pagina=' + pagina, function (data) {
            $('#contenedorPropietarios').html(data);
        });
    }

    // Cuando se abre el modal, cargamos la primera página
    $('#modalPropietarios').on('shown.bs.modal', function () {
        cargarPropietarios(1);
    });

    // Delegamos el click en la paginación
    $(document).on('click', '.cargar-pagina', function () {
        let pagina = $(this).data('pagina');
        cargarPropietarios(pagina);
    });

    // Seleccionar propietario redirige a Inmueble/PorPropietario
    $(document).on('click', '.seleccionar-propietario', function () {
        const id = $(this).data('id');
        const nombre = $(this).data('nombre');
        
    // Cerrar modal
    $('#modalPropietarios').modal('hide');

    // Redirigir al listado de inmuebles de ese propietario
    window.location.href = '@Url.Action("PorPropietario", "Inmueble")' + '?idPropietario=' + id;
    });
</script>
}

