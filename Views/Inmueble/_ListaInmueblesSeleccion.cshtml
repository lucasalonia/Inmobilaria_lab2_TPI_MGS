@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.Inmueble>
@{
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i>Lista de Inmuebles
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Tipo</th>
                                <th>Estado</th>
                                <th>Superficie m²</th>
                                <th>Ambientes</th>
                                <th>Baños</th>
                                <th>Cochera</th>
                                <th>Dirección</th>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@(item.TipoInmuebleNombre ?? "-")</td>
                                        <td>@item.Estado</td>
                                        <td>@item.SuperficieM2</td>
                                        <td>@item.Ambientes</td>
                                        <td>@item.Banos</td>
                                        <td>@item.Cochera</td>
                                        <td>@item.Direccion</td>
                                        <td>@item.Descripcion</td>
                                        <td class="text-center">
                                            <button type="button" class="btn btn-sm btn-outline-success seleccionar-inmueble"
                                                    data-id="@item.Id" title="Seleccionar Inmueble">
                                                <i class="fas fa-check me-1"></i>Seleccionar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No hay inmuebles registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @* Paginación *@
                @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link cargar-pagina" href="javascript:void(0)" data-pagina="@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>

                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a href="javascript:void(0)" class="page-link cargar-pagina" data-pagina="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link cargar-pagina" href="javascript:void(0)" data-pagina="@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>
