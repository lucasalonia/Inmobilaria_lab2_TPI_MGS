@model Inmobilaria_lab2_TPI_MGS.Models.Contrato

@{
    ViewData["Title"] = "Rescindir Contrato";
    var flag = ViewBag.PuedeRescindir as bool?;
}

<div class="container mt-4 mb-5">
    @if (flag == true)
    {
        <div class="card shadow-sm border-0 " style="max-width: 500px; margin: auto;">
            <div class="card-header bg-danger text-white d-flex align-items-center">
                <i class="bi bi-file-earmark-text me-2 fs-4"></i>
                <h4 class="mb-0">Rescindir Contrato</h4>
            </div>

            <div class="card-body p-4">
                <form asp-action="RescindirConfirmado" method="post">
                    <input type="hidden" name="ContratoId" value="@Model.Id" />

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-file-earmark-check me-2 text-danger fs-5"></i>
                            <h5 class="mb-0 fw-bold">Datos del Contrato</h5>
                        </div>
                        <hr class="mt-2 mb-3" />
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="fw-semibold">Monto Mensual</h6>
                                <p>@Model.MontoMensual</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-semibold">Fecha de Inicio</h6>
                                <p>@Model.FechaInicio.ToShortDateString()</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-person-circle me-2 text-primary fs-5"></i>
                            <h5 class="mb-0 fw-bold">Datos del Inquilino</h5>
                        </div>
                        <hr class="mt-2 mb-3" />
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="fw-semibold">Nombre</h6>
                                <p>@ViewBag.Persona?.Nombre</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-semibold">Apellido</h6>
                                <p>@ViewBag.Persona?.Apellido</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-building me-2 text-success fs-5"></i>
                            <h5 class="mb-0 fw-bold">Datos del Inmueble</h5>
                        </div>
                        <hr class="mt-2 mb-3" />
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="fw-semibold">Dirección</h6>
                                <p>@ViewBag.Inmueble?.Direccion</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-semibold">Tipo</h6>
                                <p>@ViewBag.Inmueble?.TipoInmuebleNombre</p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-cash-coin me-2 text-warning fs-5"></i>
                            <h5 class="mb-0 fw-bold">Multa</h5>
                        </div>
                        <hr class="mt-2 mb-3" />
                        <p>Ejemplo: $50.000</p>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-x-circle me-1"></i> Rescindir
                        </button>
                        <a href="@Url.Action("Index", "Contratos")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="modal fade" id="alertaContrato" tabindex="-1" aria-labelledby="alertaContratoLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-warning">
                        <h5 class="modal-title fw-bold" id="alertaContratoLabel">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> Atención
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        No se puede rescindir el contrato antes de que pasen <strong>6 meses</strong> desde la fecha de inicio.
                    </div>
                    <div class="modal-footer">
                        <a href="@Url.Action("Lista", "Contratos")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @if (flag == false)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var modal = new bootstrap.Modal(document.getElementById("alertaContrato"));
                modal.show();
            });
        </script>
    }
}
