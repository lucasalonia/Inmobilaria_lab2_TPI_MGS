@model IEnumerable<Inmobilaria_lab2_TPI_MGS.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
    var Pagina = ViewBag.Pagina ?? 1;
    var TotalPaginas = ViewBag.TotalPaginas ?? 1;
    var TotalRegistros = ViewBag.TotalRegistros ?? 0;
    int tamPagina = 10;
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
<style>
    /* Evita que el dropdown se corte dentro de tablas responsivas */
    .table-responsive {
        overflow: visible !important;
    }

    /* Asegura que el menú se muestre por encima de todo */
    .dropdown-menu {
        z-index: 2000 !important;
    }

    /* Opcional: mejora visual en hover */
    .dropdown-menu .dropdown-item:hover {
        background-color: #f8f9fa;
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                <h3 class="card-title mb-0 fw-bold text-primary">
                    <i class="fas fa-file-contract me-2"></i>Contratos
                </h3>
                <a class="btn btn-primary" asp-action="Index" title="Nuevo Contrato" data-bs-toggle="tooltip">
                    <i class="fas fa-plus me-1"></i>Crear Contrato
                </a>
            </div>

            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-12">
                        <p class="text-muted mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            Mostrando <strong>@((Pagina - 1) * tamPagina + 1)</strong> a
                            <strong>@Math.Min(Pagina * tamPagina, TotalRegistros)</strong> de
                            <strong>@TotalRegistros</strong> contratos
                        </p>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-modern">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                <th><i class="fas fa-calendar-check me-1"></i>F. Inicio</th>
                                <th><i class="fas fa-calendar-times me-1"></i>F. Fin</th>
                                <th class="text-center"><i class="fas fa-toggle-on me-1"></i>Estado</th>
                                <th><i class="fas fa-coins me-1"></i>Moneda</th>
                                <th><i class="fas fa-money-bill me-1"></i>Monto Mensual</th>
                                <th><i class="fas fa-piggy-bank me-1"></i>Depósito</th>
                                <th class="text-center"><i class="fas fa-comment me-1"></i>Obs.</th>
                                <th class="text-center"><i class="fas fa-cogs me-1"></i>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><span class="badge bg-info">@item.Id</span></td>
                                        <td><small class="text-muted"><i class="fas fa-calendar me-1"></i>@item.FechaInicio.ToShortDateString()</small></td>
                                        <td><small class="text-muted"><i class="fas fa-calendar me-1"></i>@item.FechaFin.ToShortDateString()</small></td>
                                        <td class="text-center">
                                            @{
                                                bool esActivo = item.Estado == "VIGENTE" && item.FechaFin.Date >= DateTime.Now.Date;
                                            }
                                            @if (string.IsNullOrEmpty(item.Estado))
                                            {
                                                <span class="status-badge status-pending">SIN ESTADO</span>
                                            }
                                            else if (esActivo)
                                            {
                                                <span class="status-badge status-active">
                                                    <i class="fas fa-check-circle me-1"></i>ACTIVO
                                                </span>
                                            }
                                            else if (item.Estado == "VIGENTE")
                                            {
                                                <span class="status-badge status-pending">
                                                    <i class="fas fa-exclamation-circle me-1"></i>VENCIDO
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="status-badge status-inactive">
                                                    <i class="fas fa-times-circle me-1"></i>@item.Estado
                                                </span>
                                            }
                                        </td>
                                        <td><span class="badge bg-success">@item.Moneda</span></td>
                                        <td><strong class="text-success">$@(item.MontoMensual?.ToString("N2") ?? "0.00")</strong></td>
                                        <td><span class="text-muted">$@(item.Deposito?.ToString("N2") ?? "0.00")</span></td>
                                        <td class="text-center">
                                            @if (!string.IsNullOrEmpty(item.Observaciones))
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-secondary btn-observaciones"
                                                        data-id="@item.Id"
                                                        data-observaciones="@item.Observaciones">
                                                    ...
                                                </button>

                                                                                
                                            }
                                            else
                                            {
                                                <span class="text-muted">Sin observaciones</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="dropdown" data-bs-display="static">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                                                    data-bs-toggle="dropdown" aria-expanded="false" style="border: none;">
                                                    <i class="fas fa-ellipsis-v"></i> 
                                                </button>

                                                <ul class="dropdown-menu dropdown-menu-end text-center" aria-labelledby="dropdownMenuButton">
                                                    <li>
                                                        <a class="dropdown-item btn-editar" href="javascript:void(0);"
                                                            data-id="@item.Id"
                                                            data-fechainicio="@item.FechaInicio.ToString("yyyy-MM-dd")"
                                                            data-fechafin="@item.FechaFin.ToString("yyyy-MM-dd")"
                                                            data-estado="@item.Estado"
                                                            data-moneda="@item.Moneda"
                                                            data-montomensual="@item.MontoMensual"
                                                            data-deposito="@item.Deposito"
                                                            data-observaciones="@item.Observaciones">
                                                            <i class="fas fa-edit me-2 text-primary"></i>Editar
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a class="dropdown-item btn-eliminar text-danger" href="javascript:void(0);" data-id="@item.Id">
                                                            <i class="fas fa-trash-alt me-2"></i>Eliminar
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a class="dropdown-item text-info" asp-controller="Contratos" asp-action="Detalle" asp-route-id="@item.Id">
                                                            <i class="fas fa-eye me-2 text-info"></i>Ver Detalles
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a class="dropdown-item text-warning"  asp-controller="Contratos" asp-action="Rescindir" asp-route-id="@item.Id">
                                                            <i class="fas fa-ban me-2"></i>Rescindir
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a class="dropdown-item text-success" asp-controller="Contratos" asp-action="Renovar" asp-route-id="@item.Id" >
                                                            <i class="fas fa-sync-alt me-2"></i>Renovar
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>No hay contratos registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (TotalPaginas > 1)
                {
                    <nav aria-label="Navegación de páginas">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Pagina <= 1 ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Lista?pagina=@(Pagina - 1)">
                                    <i class="fas fa-angle-left"></i> Anterior
                                </a>
                            </li>
                            @for (int i = 1; i <= TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Pagina ? "active" : "")">
                                    <a class="page-link" href="~/Contratos/Lista?pagina=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Pagina >= TotalPaginas ? "disabled" : "")">
                                <a class="page-link" href="~/Contratos/Lista?pagina=@(Pagina + 1)">
                                    Siguiente <i class="fas fa-angle-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="observacionesModal" tabindex="-1" aria-labelledby="observacionesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="observacionesLabel">Observaciones del Contrato</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <p id="contenidoObservaciones"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div

<!-- Modal Editar Contrato -->
<div class="modal fade" id="editarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Editar Contrato
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="card-body">
                    <form id="formEditar" method="post" asp-action="Editar">
                        <input type="hidden" id="Id" name="Id" />
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="FechaFin" class="form-label">Fecha Fin</label>
                                <input type="date" class="form-control" id="FechaFin" name="FechaFin" />
                            </div>
                            <div class="col-md-6">
                                <label for="Moneda" class="form-label">Moneda</label>
                                <select id="Moneda" name="Moneda" class="form-select">
                                    <option value="ARS">ARS</option>
                                    <option value="USD">USD</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="MontoMensual" class="form-label">Monto Mensual</label>
                                <input type="number" class="form-control" id="MontoMensual" name="MontoMensual"
                                    step="0.01" />
                            </div>
                            <div class="col-md-6">
                                <label for="Deposito" class="form-label">Depósito</label>
                                <input type="number" class="form-control" id="Deposito" name="Deposito" step="0.01" />
                            </div>
                            <div class="col-12">
                                <label for="Observaciones" class="form-label">Observaciones</label>
                                <textarea id="Observaciones" name="Observaciones" class="form-control"
                                    rows="3"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" form="formEditar" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Guardar cambios
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Confirmar Eliminación -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formEliminar" method="post" asp-action="Eliminar">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarModalLabel">Confirmar Eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p id="mensajeEliminar"></p>
                    <input type="hidden" id="EliminarId" name="Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
          document.querySelectorAll('.btn-observaciones').forEach(btn => {
            btn.addEventListener('click', function() {
                const id = this.dataset.id;
                const texto = this.dataset.observaciones;

                document.getElementById('contenidoObservaciones').textContent = texto;
                document.getElementById('observacionesLabel').textContent = `Observaciones del Contrato #${id}`;

                new bootstrap.Modal(document.getElementById('observacionesModal')).show();
            });
        });
          document.querySelectorAll('.btn-editar').forEach(btn => {
        btn.addEventListener('click', function () {
            const fechaInicio = this.dataset.fechainicio;

            document.getElementById('Id').value = this.dataset.id;
            document.getElementById('FechaFin').value = this.dataset.fechafin;
            document.getElementById('FechaFin').setAttribute('min', fechaInicio);
            document.getElementById('Moneda').value = this.dataset.moneda;
            document.getElementById('MontoMensual').value = this.dataset.montomensual;
            document.getElementById('Deposito').value = this.dataset.deposito;
            document.getElementById('Observaciones').value = this.dataset.observaciones;

            new bootstrap.Modal(document.getElementById('editarModal')).show();
        });
    });

    document.querySelectorAll('.btn-eliminar').forEach(btn => {
        btn.addEventListener('click', function () {
            document.getElementById('EliminarId').value = this.dataset.id;
            document.getElementById('mensajeEliminar').textContent =
                `¿Estás seguro que deseas eliminar el contrato ${this.dataset.id}?`;
            new bootstrap.Modal(document.getElementById('eliminarModal')).show();
        });
    })
    </script>
}