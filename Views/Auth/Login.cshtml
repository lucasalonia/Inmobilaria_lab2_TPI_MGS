@model Inmobilaria_lab2_TPI_MGS.Controllers.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="login-container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-10 col-lg-8 col-xl-6">
            <div class="row g-0 login-card shadow-lg">
                <div class="col-md-6 login-brand-panel d-none d-md-flex flex-column justify-content-center align-items-center text-white p-5">
                    <div class="text-center">
                        <div class="login-icon mb-4">
                            <i class="fas fa-building fa-5x"></i>
                        </div>
                        <h2 class="fw-bold mb-3">Inmobiliaria</h2>
                        <p class="lead">Sistema de Gestión Profesional</p>
                        <div class="mt-4">
                            <i class="fas fa-home fa-2x mx-2"></i>
                            <i class="fas fa-key fa-2x mx-2"></i>
                            <i class="fas fa-users fa-2x mx-2"></i>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 bg-white p-5">
                    <div class="login-form">
                        <div class="text-center mb-4">
                            <div class="d-md-none mb-3">
                                <i class="fas fa-building fa-3x" style="color: #667eea;"></i>
                            </div>
                            <h3 class="fw-bold mb-2">¡Bienvenido!</h3>
                            <p class="text-muted">Ingresa tus credenciales para continuar</p>
                        </div>
                        
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Username" class="form-label fw-semibold">
                                    <i class="fas fa-user me-2"></i>Usuario
                                </label>
                                <div class="input-group modern-input">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-4">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2"></i>Contraseña
                                </label>
                                <div class="input-group modern-input">
                                    <span class="input-group-text">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                    <input asp-for="Password" class="form-control" placeholder="Ingrese su contraseña" />
                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePassword()">
                                        <i class="fas fa-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            
                            <div class="mb-4 form-check">
                                <input asp-for="RememberMe" class="form-check-input" id="rememberCheck" />
                                <label asp-for="RememberMe" class="form-check-label" for="rememberCheck">
                                </label>
                            </div>
                            
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-gradient btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                                </button>
                            </div>
                            
                            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        </form>
                        
                        <div class="text-center mt-4 pt-4 border-top">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Sistema seguro y protegido
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
}
